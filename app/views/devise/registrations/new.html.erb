<%= render 'layouts/navbar' %>

<div class="mx-5 my-10">
  <h2 class="text-3xl text-center mb-5">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="flex flex-col gap-4">
      <div class="relative">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#64748B" class="w-6 h-6 absolute top-3 left-3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
        </svg>
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "text-lg bg-slate-200 text-slate-500 rounded w-full h-12 focus:border-slate-500 block w-full pl-12 p-2.5" %>
      </div>


      <div class="relative">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#64748B" class="w-6 h-6 absolute top-3 left-3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", placeholder: "First Name", class: "text-lg bg-slate-200 text-slate-500 rounded w-full h-12 focus:border-slate-500 block w-full pl-12 p-2.5" %>
      </div>

      <div class="relative">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#64748B" class="w-6 h-6 absolute top-3 left-3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>      
        <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", placeholder: "Last Name", class: "text-lg bg-slate-200 text-slate-500 rounded w-full h-12 focus:border-slate-500 block w-full pl-12 p-2.5" %>
      </div> 

      <div class="relative">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#64748B" class="w-6 h-6 absolute top-3 left-3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
        </svg>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "New Password", class: "text-lg bg-slate-200 text-slate-500 rounded w-full h-12 focus:border-slate-500 block w-full pl-12 p-2.5" %>
      </div>

      <div class="relative">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#64748B" class="w-6 h-6 absolute top-3 left-3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
        </svg>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class: "text-lg bg-slate-200 text-slate-500 rounded w-full h-12 focus:border-slate-500 block w-full pl-12 p-2.5" %>
      </div>

      <div class="w-full h-12 bg-primary rounded  mt-5">
        <%= f.submit "Sign up", class: "w-full h-full text-white text-lg" %>
      </div>
    </div>
  <% end %>
</div>
