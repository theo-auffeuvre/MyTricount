<%= render 'shared/navbar_text', type: "Edit Expense" %>

<%= form_with model: [ @activity, @expense ] do |f| %>
  <div class="mx-5 my-10 flex flex-col gap-5">
    <div class="w-full relative z-0">
      <%= f.text_field :title, id: "title", class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-primary peer", placeholder:" " %>
      <%= f.label :title, for: "title", class: "absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-primary peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
    </div>

    <div class="w-full relative z-0">
      <%= f.text_field :amount, id: "amount", class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-primary peer", placeholder:" " %>
      <%= f.label :amount, for: "amount", class: "absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-primary peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
    </div>

    <div class="w-full relative z-0">
      <%= f.date_field :date, id: "date", value: "#{Date.today}", class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-primary peer", placeholder:" " %>
      <%= f.label :date, for: "date", class: "absolute text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-primary peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
    </div>

    <div class="w-full flex flex-col">
      <%= f.label "Paid by", for: "participants", class: "text-sm text-gray-500" %>
      <%= f.select :participant_id, @activity.participants.map { |u| [u.user.email, u.id] }, {}, { class: "w-full border-b-2 border-gray-300 py-2.5" } %>
    </div>

    <%= f.button nil, class: "absolute top-5 right-5" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
      </svg>
    <% end %>
  </div>
<% end %>